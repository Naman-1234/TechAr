<link href="templates/texteditor/quill/quill.snow.css" rel="stylesheet" />
<link href="templates/texteditor/quill/katex.min.css" rel="stylesheet" />
<link
  href="templates/texteditor/quill/syntax-styles/googlecode.css"
  rel="stylesheet"
/>
